        {% include 'includes/_modal.html.twig' with {
            'id': 'searchModal',
            'class': 'd-none',
            'header': 'Szukaj książki',
            'content': '<form class="search__form form" action="' ~ path('home') ~ '" method="get">
                <label class="form__control my-0">
                    <span class="form__control-title"></span>
                    <input type="search" name="tytul" class="form__control-input" title="Szukaj książki" placeholder="Szukana książka...">
                </label>

                <button type="submit" class="form__control-submit btn btn-primary btn-block" title="Szukaj">
                    <span class="fas fa-search"></span> Szukaj
                </button>
            </form>'
        } %}

        <script src="{{ asset('js/order.js') }}" defer></script>
        <script>
            let searchModal = document.getElementById('searchModal')
            let searchShow = document.getElementById('searchShow')

            searchShow.addEventListener('click', function (e) {
                e.preventDefault()
                searchModal.classList.remove('d-none')
            })
            //searchModal.classList.add('d-none')
        </script>
        {% block javascripts %}{% endblock %}
    </body>
