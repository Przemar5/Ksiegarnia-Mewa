    <body>
    	{% include('includes/navigation.html.twig') %}

    	<!-- Header -->
    	<header class="header">
            <h1>Księgarnia Mewa</h1>
    		<picture>
    			<source media="(min-width: 1281px)" srcset="{{ asset('images/app/hero-lg.jpg') }}">
    			<source media="(min-width: 641px)" srcset="{{ asset('images/app/hero-md.jpg') }}">
    			<source media="(max-width: 640px)" srcset="{{ asset('images/app/hero-sm.jpg') }}">
    			<img src="{{ asset('images/app/hero-lg.jpg') }}" alt="serce z dwóch kartek książki" style="width:100%; vertical-align:middle;">
