{% extends 'base.html.twig' %}

{% block title %} - {{ genre.name }}{% endblock %}

{% block aside %}
	{% include('includes/aside.html.twig') %}
{% endblock %}

{% block main %}
	<section class="section">
		<h2 class="section__header">{{ genre.name }}</h2>

        {% import 'macros/form.html.twig' as form %}

        {{ form_start(genreForm, {'attr': {'class': 'form genre__form'}}) }}
            {{ form_widget(genreForm._token) }}
            {{ form.input(genreForm.name) }}
            {{ form.input(genreForm.started_at) }}
            {{ form.input(genreForm.ended_at) }}
            {{ form.input(genreForm.origin) }}
            {{ form.input(genreForm.description) }}
            
            <button type="submit" class="form__submit btn btn-primary mt-3 mb-2">Zapisz</button>

            <a href="{{ path('genre_show', {'id': genre.id}) }}" class="d-inline-block mb-2 mr-2">Pokaż gatunek</a>
            
            <a href="{{ path('genre_delete', {'id': genre.id}) }}" class="d-inline-block mb-2 text-danger">
                Usuń gatunek
            </a>

            <a href="{{ path('genre_index') }}" class="d-block mb-4">Index gatunków</a>
        {{ form_end(genreForm) }}
	</section>	
{% endblock %}
