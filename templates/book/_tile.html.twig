<figure class="book-tile">
	<a href="{{ path('book_show', {'id': book.id}) }}" class="book-tile__main-link {{ (date(book.createdAt) > date('-30days')) ? 'new' : '' }}">
		<img src="{{ asset('images/app/book_covers/' ~ book.cover) }}" class="book-tile__img">
	</a>
	<figcaption class="book-tile__caption">
		<h5 class="book-tile__header">{{ book.title ?? '' }}</h5>
		<small class="book-tile__author d-block mb-2">{{ book.author ?? '' }}</small>
		<p class="book-tile__description">
			{% if book.description != null %}
				{{ (book.description|length > 180) ? book.description[0:180] ~ '...' : book.description }}
			{% else %}
				{{ book.description ?? '' }}
			{% endif %}
		</p>
		<div class="book-tile__footer">
			{% include 'order/_controls.html.twig' with {'book': book} %}
			<p class="book-tile__price">{{ book.price }} PLN</p>
		</div>
	</figcaption>
</figure>